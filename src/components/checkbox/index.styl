@import '~@src/styles/variables.styl'

.con
    display flex
    flex-flow: row nowrap
    justify-content: flex-start
    align-items: center
    .box
        height 15px
        width: 18px
        padding: 0
        border-radius: 4px
        background: none
        margin-right: 10px
        border: 2px solid $primaryColor
        border-right: none
        color $primaryColor
        outline: none
    .check
        font-weight: 700
        font-size: 18px
    .active
        border-bottom:  solid 3px $primaryColor
        color:#fff

        
